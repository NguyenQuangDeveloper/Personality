<Window x:Class="UserAccessLib.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    Title="{Binding Lang[title_Login], FallbackValue='Login'}"
    Width="300"
    MaxWidth="300"   
    Background="#F1F1F1"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel Margin="12">
        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
            Text="{Binding Lang[title_Login], FallbackValue='Login', Mode=OneWay}" />
        <DockPanel VerticalAlignment="Center">
            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Account" />
            <TextBox
                Margin="12,0,0,0"
                materialDesign:HintAssist.Hint="{Binding Lang[title_UserName], FallbackValue='User Name'}"
                Text="{Binding LoginModel.UserName}" />
        </DockPanel>

        <DockPanel Margin="0,18,0,0">
            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Key" />
            <PasswordBox
                x:Name="passwordBox"
                Margin="12,0,0,0"
                materialDesign:HintAssist.Hint="{Binding Lang[title_Password], FallbackValue='Password'}"
                materialDesign:TextFieldAssist.HasClearButton="True"
                PasswordChanged="PasswordBox_PasswordChanged"
                         />
        </DockPanel>

        <CheckBox
            Margin="0,18,0,0"
            Content="{Binding Lang[title_RememberMe], FallbackValue='Remember Me'}"
            IsChecked="{Binding LoginModel.RememberMe}" />

        <Button
            Margin="0,12,0,0"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Content="{Binding Lang[title_Login], FallbackValue='Login'}"
            IsDefault="True" />

        <TextBlock
            Margin="0,12,0,0"
            Foreground="Red"
            Style="{StaticResource MaterialDesignBody2TextBlock}"
            Text="{Binding LoginModel.ErrorMessage}" 
            Visibility="Visible"/>
    </StackPanel>
</Window>
