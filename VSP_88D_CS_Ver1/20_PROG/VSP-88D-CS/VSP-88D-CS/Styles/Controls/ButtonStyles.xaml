                            <TextBlock x:Name="TextBlockContent"
                                       HorizontalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#4A4A4A"
                                       Text="{Binding Path=Tag.Key, RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="BackgroundBorder"
                                    Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0"
