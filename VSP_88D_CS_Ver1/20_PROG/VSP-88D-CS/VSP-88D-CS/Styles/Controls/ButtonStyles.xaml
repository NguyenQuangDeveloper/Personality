                                    Value="#90CAF9" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=Tag.IsSelected, RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter TargetName="BackgroundBorder"
                                    Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Offset="0.0"
                                                      Color="#2196F3" />
                                        <GradientStop Offset="1.0"
                                                      Color="#1976D2" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="BackgroundBorder"
                                    Property="BorderBrush"
                                    Value="#1E88E5" />
                            <Setter TargetName="TextBlockContent"
                                    Property="FontWeight"
                                    Value="Bold" />
                            <Setter TargetName="TextBlockContent"
