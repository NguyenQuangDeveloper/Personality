<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary">
    <SolidColorBrush x:Key="PrimaryColor"
                     Color="#FF6A32C1" />
    <!--  Image Button Style  -->
    <Style x:Key="ImageButtonStyle"
           TargetType="Button">
        <Setter Property="Foreground"
                Value="Black" />
        <Setter Property="FontWeight"
                Value="Bold" />
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="Padding"
                Value="10" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="Green" />
        <Setter Property="Background"
                Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <StackPanel Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <Image Width="24"
                                   Height="24"
                                   Margin="0,0,8,0"
                                   Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" />
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Image Cancel Button Style  -->
    <Style x:Key="ImageButtonCancelStyle"
           BasedOn="{StaticResource ImageButtonStyle}"
           TargetType="Button">
        <Setter Property="BorderBrush"
                Value="Red" />
    </Style>
    <!--  Image Cancel Button Style  -->
    <Style x:Key="CustomImageButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!--  기본 배경 (그라데이션)  -->
                        <Border x:Name="BackgroundBorder"
                                BorderBrush="#D1D9E6"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="0,1">
                                    <GradientStop Offset="0.0"
                                                  Color="#FFFFFF" />
                                    <GradientStop Offset="1.0"
                                                  Color="#E0E0E0" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <!--  콘텐츠  -->
                        <StackPanel Margin="4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                            <Image Width="24"
                                   Height="24"
                                   Source="{Binding ImagePath, RelativeSource={RelativeSource TemplatedParent}}" />
                            <TextBlock HorizontalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#4A4A4A"
                                       Text="{Binding MenuText, RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  마우스 오버  -->
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="BackgroundBorder"
                                    Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Offset="0.0"
                                                      Color="#E3F2FD" />
                                        <GradientStop Offset="1.0"
                                                      Color="#BBDEFB" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="BackgroundBorder"
                                    Property="BorderBrush"
                                    Value="#90CAF9" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--  선택된 상태  -->
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected}"
                         Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!--  선택된 배경  -->
                                <Border x:Name="BackgroundBorder"
                                        BorderBrush="#1E88E5"
                                        BorderThickness="2"
                                        CornerRadius="8">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="0,1">
                                            <GradientStop Offset="0.0"
                                                          Color="#2196F3" />
                                            <GradientStop Offset="1.0"
                                                          Color="#1976D2" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <StackPanel Margin="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                    <Image Width="24"
                                           Height="24"
                                           Source="{Binding ImagePath}" />
                                    <TextBlock HorizontalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Text="{Binding MenuText}" />
                                </StackPanel>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <!--  비활성화 상태  -->
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!--  비활성화된 배경  -->
                                <Border x:Name="BackgroundBorder"
                                        BorderBrush="#BDBDBD"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <Border.Background>
                                        <SolidColorBrush Color="#F5F5F5" />
                                    </Border.Background>
                                </Border>
                                <StackPanel Margin="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                    <Image Width="24"
                                           Height="24"
                                           Opacity="0.6"
                                           Source="{Binding ImagePath}" />
                                    <TextBlock HorizontalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#9E9E9E"
                                               Text="{Binding MenuText}" />
                                </StackPanel>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>

    </Style>

