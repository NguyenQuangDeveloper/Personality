<UserControl x:Class="VSP_88D_CS.Views.Auto.AutoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Auto"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             xmlns:vsl="clr-namespace:VSLibrary.UIComponent.Localization;assembly=VSLibrary"
             xmlns:controls="clr-namespace:VSP_88D_CS.Common.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2.4*" />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0"
                            Margin="1,3,0,0"
                            vsmvvm:RegionBehavior.RegionName="SvPvView" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0"
                                Margin="1,3,0,0"
                                vsmvvm:RegionBehavior.RegionName="ChamberView" />
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <TextBox Margin="0,0,0,20"
                                 materialDesign:HintAssist.HelperText="{Binding LanguageResources[GeneratorRun], FallbackValue='Generator Run(H:MM)'}"
                                 materialDesign:HintAssist.HelperTextFontSize="15"
                                 IsReadOnly="True"
                                 FontSize="15"
                                 FontWeight="DemiBold"
                                 Text="{Binding GeneratorRun, FallbackValue='0:00'}" />
                        <TextBox Margin="0,0,0,20"
                                 materialDesign:HintAssist.HelperText="{Binding LanguageResources[GeneratorMode], FallbackValue='Generator Mode'}"
                                 materialDesign:HintAssist.HelperTextFontSize="15"
                                 IsReadOnly="True"
                                 FontSize="15"
                                 FontWeight="DemiBold"
                                 Text="{Binding GeneratorMode, FallbackValue='Local'}" />
                        <TextBox Margin="0,0,0,20"
                                 materialDesign:HintAssist.HelperText="{Binding LanguageResources[PumpRun], FallbackValue='Pump Run(H:MM)'}"
                                 materialDesign:HintAssist.HelperTextFontSize="15"
                                 IsReadOnly="True"
                                 FontSize="15"
                                 FontWeight="DemiBold"
                                 Text="{Binding PumpRun, FallbackValue='0:00'}" />
                        <TextBox Margin="0,0,0,20"
                                 materialDesign:HintAssist.HelperText="{Binding LanguageResources[PurgeTime], FallbackValue='Purge Time(msec.)'}"
                                 materialDesign:HintAssist.HelperTextFontSize="15"
                                 IsReadOnly="True"
                                 FontSize="15"
                                 FontWeight="DemiBold"
                                 Text="{Binding PurgeTime, FallbackValue='0/1350'}" />
                        <TextBox Margin="0,0,0,20"
                                 materialDesign:HintAssist.HelperText="{Binding LanguageResources[Ionizer], FallbackValue='Ionizer'}"
                                 materialDesign:HintAssist.HelperTextFontSize="15"
                                 IsReadOnly="True"
                                 FontSize="15"
                                 FontWeight="DemiBold"
                                 Text="{Binding UseIonizerDisplay, Mode=OneWay, FallbackValue='ON'}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                Grid.Row="1"
                                VerticalAlignment="Bottom">

                        <controls:UnifiedColorVsButton Height="50"
                                             Margin="2,5,2,0"
                                             UnifiedColor="MediumPurple"
                                             Command="{Binding OpenChamberCommand}"
                                             CommandParameter="UnloadUnclamp"
                                             ImagePosition="Left"
                                             FontWeight="DemiBold"
                                             Foreground="White">
                            <StackPanel VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Icons/ChamberUp.png" />
                                <TextBlock Padding="2,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="{Binding LanguageResources[Open], FallbackValue='Open'}" />
                            </StackPanel>
                        </controls:UnifiedColorVsButton>

                        <controls:UnifiedColorVsButton Height="50"
                                                       Margin="2,5,2,0"
                                                       UnifiedColor="MediumPurple"
                                                       Command="{Binding CleanChamberCommand}"
                                                       CommandParameter="UnloadUnclamp"
                                                       ImagePosition="Left"
                                                       FontWeight="DemiBold"
                                                       Foreground="White">
                            <StackPanel VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Icons/ChamberDn.png" />
                                <TextBlock Padding="2,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="{Binding LanguageResources[Close], FallbackValue='Close'}" />
                            </StackPanel>
                        </controls:UnifiedColorVsButton>

                        <controls:UnifiedColorVsButton Height="50"
                                                       Margin="2,5,2,5"
                                                       UnifiedColor="MediumSeaGreen"
                                                       Command="{Binding CleanChamberCommand}"
                                                       CommandParameter="UnloadUnclamp"
                                                       ImagePosition="Left"
                                                       FontWeight="DemiBold"
                                                       Foreground="White">
                            <StackPanel VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Icons/Clean.png" />
                                <TextBlock Padding="2,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="{Binding LanguageResources[Clean], FallbackValue='Clean'}" />
                            </StackPanel>
                        </controls:UnifiedColorVsButton>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0"
                            Margin="3,3,1,0"
                            vsmvvm:RegionBehavior.RegionName="ProductionView" />
            <ContentControl Grid.Row="1"
                            Margin="3,3,1,0"
                            vsmvvm:RegionBehavior.RegionName="StateView" />
            <ContentControl Grid.Row="2"
                            Margin="3,3,1,0"
                            vsmvvm:RegionBehavior.RegionName="SelectJobView" />
        </Grid>
    </Grid>
</UserControl>
