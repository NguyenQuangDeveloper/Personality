<Window x:Class="VSP_88D_CS.Views.Auto.Sub.Initial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSP_88D_CS.Views.Auto.Sub"
        xmlns:controls="clr-namespace:VSP_88D_CS.Common.Controls"
        mc:Ignorable="d"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Border BorderBrush="#673AB7"
                BorderThickness="1.5"
                CornerRadius="10"
                Background="White"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="5"
                        BorderBrush="#673AB7"
                        BorderThickness="1.5"
                        Margin="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <ItemsControl ItemsSource="{Binding Items}">
                                <!--<ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>-->
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray"
                                                BorderThickness="1"
                                                Margin="5"
                                                Padding="5"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="40" />
                                                </Grid.ColumnDefinitions>
                                                <CheckBox IsChecked="{Binding IsChecked}"
                                                          VerticalAlignment="Center"
                                                          Grid.Column="0"
                                                          Margin="5" />
                                                <TextBlock Text="{Binding EquipmentName}"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="1"
                                                           Margin="5" />
                                                <ProgressBar Value="{Binding ProgressValue}"
                                                             Height="20"
                                                             Grid.Column="2"
                                                             Margin="5,0" />
                                                <TextBlock Text="{Binding ProgressPer}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           Grid.Column="3" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <CheckBox Grid.Row="1"
                          IsChecked="{Binding IsAllChecked, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="5">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2"
                                        ScaleY="2" />
                    </CheckBox.LayoutTransform>
                    <CheckBox.Content>
                        <TextBlock Text="{Binding LanguageResources[Check/UncheckAll], FallbackValue='Check/Uncheck all'}"
                                   VerticalAlignment="Center"
                                   FontSize="8"
                                   HorizontalAlignment="Center" />
                    </CheckBox.Content>
                </CheckBox>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0, 5, 0, 0">

                    <controls:ExtendedVsButton Command="{Binding InitialCommand}"
                                               Width="120"
                                               Height="40"
                                               Margin="0,0,20,0"
                                               Background="LimeGreen"
                                               ImageSource="/Resources/Icons/Init.png"
                                               Text="{Binding LanguageResources[Init], FallbackValue='Init'}" />

                    <Button Command="{Binding InitialCommand}"
                            Width="120"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="LimeGreen">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/Init.png"
                                   Margin="0,0,5,0"
                                   Width="25"
                                   Height="25" />
                            <TextBlock Text="{Binding LanguageResources[Init], FallbackValue='Init'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding StopCommand}"
                            Width="120"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="LightGray">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/Stop.png"
                                   Margin="0,0,5,0"
                                   Width="25"
                                   Height="25" />
                            <TextBlock Text="{Binding LanguageResources[Stop], FallbackValue='Stop'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding CloseCommand}"
                            Width="120"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="Red">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/Close.png"
                                   Margin="0,0,5,0" />
                            <TextBlock Text="{Binding LanguageResources[Close], FallbackValue='Close'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
