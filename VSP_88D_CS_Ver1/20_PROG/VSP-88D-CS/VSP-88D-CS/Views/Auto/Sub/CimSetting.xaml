<Window x:Class="VSP_88D_CS.Views.Auto.Sub.CimSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
        xmlns:local="clr-namespace:VSP_88D_CS.Views.Auto.Sub"
        xmlns:shared="clr-namespace:VSP_88D_CS.Shared"
        xmlns:views="clr-namespace:VSP_88D_CS.Views.Auto.Sub" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="570"
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" 
                      ItemsSource="{Binding SettingsList}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="None"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      GridLinesVisibility="None"
                      RowHeight="30"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Key}" 
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="DemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Value}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="1">
                <StackPanel HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                           Text="Passive"
                           Padding="25,5,5,5"
                           VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding UsePassive, FallbackValue='true'}"
                                      materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Rss}"
                                      Content="{materialDesign:PackIcon Kind=RssOff}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}">
                            <ToggleButton.LayoutTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </ToggleButton.LayoutTransform>
                        </ToggleButton>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                           Text="Offline"
                           Padding="25,5,5,5"
                           VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding UseOffline, FallbackValue='true'}"
                                      materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Rss}"
                                      Content="{materialDesign:PackIcon Kind=RssOff}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}">
                            <ToggleButton.LayoutTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </ToggleButton.LayoutTransform>
                        </ToggleButton>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                           Text="Online Local"
                           Padding="25,5,5,5"
                           VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding UseOnlineLocal, FallbackValue='true'}"
                                      materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Rss}"
                                      Content="{materialDesign:PackIcon Kind=RssOff}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}">
                            <ToggleButton.LayoutTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </ToggleButton.LayoutTransform>
                        </ToggleButton>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Online Remote"
                                   Padding="25,5,5,5"
                                   VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding UseOnlineRemote, FallbackValue='true'}"
                                      materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Rss}"
                                      Content="{materialDesign:PackIcon Kind=RssOff}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}">
                            <ToggleButton.LayoutTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </ToggleButton.LayoutTransform>
                        </ToggleButton>
                    </Grid>
                    <Button Content="Save &amp; Apply"
                            Margin="0,5,0,0"
                            Width="270"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding SaveApplyCommand}"/>
                </StackPanel>
            </Grid>
            <Viewbox Grid.Row="2"
                     Stretch="Uniform">
                <!--<views:Cim/>-->
                <views:Cim DataContext="{x:Static shared:SharedInstances.SharedCimViewModel}" />
            </Viewbox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0"
                       Source="{Binding CimImg, FallbackValue='pack://application:,,,/Resources/Icons/CimConnected.png'}"/>
                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center">
                    <Button Content="Start"
                            Margin="5"
                            Height="50"
                            Command="{Binding StartCommand}"/>
                    <Button Content="Stop"
                            Margin="5"
                            Height="50"
                            Command="{Binding StopCommand}"/>
                    <Button Content="Close"
                            Margin="5"
                            Height="50"
                            Command="{Binding CloseCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
