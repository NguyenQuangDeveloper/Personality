<UserControl x:Class="VSP_88D_CS.Views.Auto.Sub.State"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Auto.Sub"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             xmlns:controls="clr-namespace:VSP_88D_CS.Styles.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="800">
    <Grid>
        <!--  Main Layout  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="0"
                    HorizontalContentAlignment="Left"
                    TabStripPlacement="Bottom">
            <TabItem Header="{Binding LanguageResources[Device], FallbackValue='Device'}"
                     Height="40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Viewbox Stretch="Fill">
                        <DataGrid Grid.Row="0"
                                  Width="300"
                                  IsHitTestVisible="False"
                                  ItemsSource="{Binding Items}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True"
                                  Background="Gray"
                                  HorizontalGridLinesBrush="DarkGray"
                                  CanUserResizeColumns="False"
                                  GridLinesVisibility="All">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background"
                                            Value="MidnightBlue" />
                                    <Setter Property="FontWeight"
                                            Value="DemiBold" />
                                    <Setter Property="Foreground"
                                            Value="White" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                    <Setter Property="VerticalContentAlignment"
                                            Value="Center" />
                                    <Setter Property="BorderBrush"
                                            Value="Gray" />
                                    <Setter Property="FontSize"
                                            Value="15" />
                                    <Setter Property="BorderThickness"
                                            Value="0.5" />
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                    <Setter Property="VerticalContentAlignment"
                                            Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LanguageResources[Loading], FallbackValue='Loading'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding LoadingBackground}">
                                                <TextBlock Foreground="{Binding LoadingForeground}"
                                                           Text="{Binding Loading}"
                                                           TextAlignment="Center" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTemplateColumn  Width="*">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LanguageResources[Chamber], FallbackValue='Chamber'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding ChamberBackground}">
                                                <TextBlock Foreground="{Binding ChamberForeground}"
                                                           Text="{Binding Chamber}"
                                                           TextAlignment="Center" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LanguageResources[Unloading], FallbackValue='Unloading'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding UnloadingBackground}">
                                                <TextBlock Foreground="{Binding UnloadingForeground}"
                                                           Text="{Binding Unloading}"
                                                           TextAlignment="Center" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Viewbox>
                    <GroupBox Grid.Row="1"
                              Margin="0,3,0,0"
                              FontWeight="DemiBold"
                              Foreground="DarkViolet"
                              Header="{Binding LanguageResources[Legend], FallbackValue='Legend'}">
                        <Grid>
                            <UniformGrid HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                         Rows="1">
                                <Border Height="30"
                                        Margin="5,0,5,0"
                                        Background="Gray"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Text="{Binding LanguageResources[Empty], FallbackValue='Empty'}" />
                                </Border>
                                <Border Height="30"
                                        Margin="5,0,5,0"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="Black"
                                               Text="{Binding LanguageResources[Before], FallbackValue='Before'}" />
                                </Border>
                                <Border Height="30"
                                        Margin="5,0,5,0"
                                        Background="Yellow"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="Black"
                                               Text="{Binding LanguageResources[Working], FallbackValue='Working'}" />
                                </Border>
                                <Border Height="30"
                                        Margin="5,0,5,0"
                                        Background="Green"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Text="{Binding LanguageResources[Done], FallbackValue='Done'}" />
                                </Border>
                            </UniformGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="{Binding LanguageResources[JobInfo], FallbackValue='Job Info'}"
                     Height="40">
                <DataGrid Name="DataGridValues"
                          Grid.Column="0"
                          AutoGenerateColumns="False"
                          BorderBrush="#D0D0D0"
                          BorderThickness="1"
                          CanUserAddRows="False"
                          CanUserSortColumns="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          HorizontalGridLinesBrush="#E0E0E0"
                          IsReadOnly="True"
                          ItemsSource="{Binding DataGridValues}"
                          VerticalGridLinesBrush="#E0E0E0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background"
                                    Value="#F0F4F8" />
                            <Setter Property="Foreground"
                                    Value="#102A43" />
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                            <Setter Property="FontSize"
                                    Value="14" />
                            <Setter Property="Padding"
                                    Value="10,8" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                            <Setter Property="BorderBrush"
                                    Value="#D0D0D0" />
                            <Setter Property="BorderThickness"
                                    Value="0,0,1,1" />
                            <Setter Property="Height"
                                    Value="40" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#D9E2EC" />
                                    <Setter Property="BorderBrush"
                                            Value="#627D98" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Width="20*"
                                            Binding="{Binding Number}"
                                            Header="No." />
                        <DataGridTextColumn Width="40*"
                                            Binding="{Binding LotID}"
                                            Header="Lot ID." />
                        <DataGridTextColumn Width="40*"
                                            Binding="{Binding MgzID}"
                                            Header="Mgz ID." />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <Viewbox Grid.Column="1"
                 Stretch="Fill">
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <VSControls:VsButton Margin="5,5,0,0"
                                     Background="MediumPurple"
                                     BackgroundTop="MediumPurple"
                                     ShineColor="MediumPurple"
                                     ShineColorBottom="MediumPurple"
                                     Foreground="White"
                                     Height="60"
                                     Command="{Binding SharedCommand}"
                                     Content="{Binding LanguageResources[LastStrip], FallbackValue='Last Strip'}"
                                     FontWeight="DemiBold" />

                <VSControls:VsButton Margin="5,5,0,0"
                                     Background="MediumPurple"
                                     BackgroundTop="MediumPurple"
                                     ShineColor="MediumPurple"
                                     ShineColorBottom="MediumPurple"
                                     Foreground="White"
                                     Height="60"
                                     Command="{Binding SharedCommand}"
                                     Content="{Binding LanguageResources[LastMagazine], FallbackValue='Last Magazine'}"
                                     FontWeight="DemiBold" />

                <!--Source="pack://application:,,,/Resources/Icons/MgzClamp.png"-->

                <VSControls:VsButton Margin="5,5,0,0"
                                     Background="LightBlue"
                                     BackgroundTop="LightBlue"
                                     ShineColor="LightBlue"
                                     ShineColorBottom="LightBlue"
                                     Foreground="White"
                                     Height="60"
                                     Command="{Binding SharedCommand}"
                                     Content="{Binding LanguageResources[LastMagazine], FallbackValue='Last Magazine'}"
                                     FontWeight="DemiBold" />

                <!--Source="pack://application:,,,/Resources/Icons/MgzUnclamp.png"-->

                <VSControls:VsButton Margin="5,5,0,0"
                                     Height="60"
                                     Background="LightPink"
                                     BackgroundTop="LightPink"
                                     ShineColor="LightPink"
                                     ShineColorBottom="LightPink"
                                     Command="{Binding SharedCommand}"
                                     CommandParameter="UnloadUnclamp"
                                     FontWeight="DemiBold">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <Image Height="30" />
                        <TextBlock Padding="2,0,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{Binding LanguageResources[LastMagazine], FallbackValue='Last Magazine'}" />
                    </StackPanel>
                </VSControls:VsButton>

                <VSControls:VsButton Margin="5,5,0,0"
                                     Background="MediumPurple"
                                     BackgroundTop="MediumPurple"
                                     ShineColor="MediumPurple"
                                     ShineColorBottom="MediumPurple"
                                     Foreground="White"
                                     Height="60"
                                     Command="{Binding SharedCommand}"
                                     Content="{Binding LanguageResources[LastMagazine], FallbackValue='Last Magazine'}"
                                     FontWeight="DemiBold" />
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
