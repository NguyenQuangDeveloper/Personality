<UserControl x:Class="VSP_88D_CS.Views.Auto.Sub.Production"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Auto.Sub"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0"
                      Margin="0,0,0,3"
                      FontWeight="DemiBold"
                      Header="{Binding LanguageResources[TotalProduct], FallbackValue='Total Product'}">
                <TextBlock Text="{Binding TotalProduct, FallbackValue='999'}"
                           FontFamily="{StaticResource FontFamilyDigital}"
                           HorizontalAlignment="Center"
                           FontSize="30"
                           VerticalAlignment="Center" />
            </GroupBox>
            <Viewbox Grid.Column="1"
                     Margin="3,0,0,3"
                     Stretch="Fill">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <VSControls:VsButton Height="80"
                                         Width="400"
                                         Margin="0,0,0,3"
                                         BackgroundTop="MediumPurple"
                                         Command="{Binding InitialShowCommand}"
                                         ShineColor="MediumPurple"
                                         ImagePosition="Left"
                                         ShineColorBottom="MediumPurple"
                                         FontWeight="DemiBold"
                                         Foreground="White">
                        <StackPanel VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Resources/Icons/Init.png"
                                   Margin="5" />
                            <TextBlock Padding="2,0,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding LanguageResources[Init], FallbackValue='Init'}"
                                       FontSize="25" />
                        </StackPanel>
                    </VSControls:VsButton>

                    <VSControls:VsButton Grid.Row="1"
                                         Height="80"
                                         Width="400"
                                         Margin="0,0,0,3"
                                         BackgroundTop="MediumPurple"
                                         Command="{Binding ResetCommand}"
                                         CommandParameter="ResetCommand"
                                         ShineColor="MediumPurple"
                                         ImagePosition="Left"
                                         ShineColorBottom="MediumPurple"
                                         FontWeight="DemiBold"
                                         Foreground="White">
                        <StackPanel VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Resources/Icons/Reset.png"
                                   Stretch="Fill"
                                   Margin="5" />
                            <TextBlock Padding="2,0,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding LanguageResources[Reset], FallbackValue='Reset'}"
                                       FontSize="25" />
                        </StackPanel>
                    </VSControls:VsButton>
                </Grid>
            </Viewbox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0"
                      Margin="0,0,3,0"
                      FontWeight="DemiBold"
                      Header="{Binding LanguageResources[LotCount], FallbackValue='Lot Count'}">
                <TextBlock Text="{Binding LotCount, FallbackValue='999'}"
                           FontFamily="{StaticResource FontFamilyDigital}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" />
            </GroupBox>

            <GroupBox Grid.Column="1"
                      Margin="0,0,3,0"
                      FontWeight="DemiBold"
                      Header="{Binding LanguageResources[Cycle], FallbackValue='Cycle(Sec.)'}">
                <TextBlock Text="{Binding CycleSec, FallbackValue='999'}"
                           FontFamily="{StaticResource FontFamilyDigital}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" />
            </GroupBox>

            <GroupBox Grid.Column="2"
                      Margin="0,0,0,0"
                      FontWeight="DemiBold"
                      Header="{Binding LanguageResources[ProductsPerHour], FallbackValue='Products Per Hour'}">
                <TextBlock Text="{Binding ProductsPerHour, FallbackValue='999'}"
                           FontFamily="{StaticResource FontFamilyDigital}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30" />
            </GroupBox>
        </Grid>


    </Grid>
</UserControl>
