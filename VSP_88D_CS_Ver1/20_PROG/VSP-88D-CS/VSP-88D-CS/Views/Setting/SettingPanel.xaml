<UserControl x:Class="VSP_88D_CS.Views.Setting.SettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             xmlns:VsNavigations="clr-namespace:VSLibrary.UIComponent.VsNavigations;assembly=VSLibrary"
             xmlns:setting="clr-namespace:VSP_88D_CS.ViewModels.Setting"
             d:DataContext="{d:DesignInstance Type=setting:SettingPanelViewModel}">

    <UserControl.InputBindings>
        <KeyBinding Key="F6"
                    Command="{Binding F6Command}" />
    </UserControl.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.15*" />
        </Grid.ColumnDefinitions>

        <!--<VSControls:VsControl Grid.Column="0"
                              ContentList="{Binding SettingPage}"
                              CurrentView="{Binding SettingMenu}" />-->

        <ContentControl vsmvvm:RegionBehavior.RegionName="SettingPanel" />

        <VsNavigations:VsNavigationBar Grid.Column="1"
                                       ButtonDatas="{Binding ButtonDatas}"
                                       LanguageType="{Binding Source={StaticResource LangProxy}, Path=CurrentLanguage}"
                                       Position="Right" />
    </Grid>
</UserControl>
