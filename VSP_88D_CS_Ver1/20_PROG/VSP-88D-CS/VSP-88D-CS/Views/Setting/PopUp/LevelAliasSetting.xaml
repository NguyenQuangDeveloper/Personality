<Window x:Class="VSP_88D_CS.Views.Setting.PopUp.LevelAliasSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.PopUp"
        mc:Ignorable="d"
        Title="LevelAliasSetting" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Columns="1" >
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Height="50"
                        Margin="5">
                <Label Content="Level1" Margin="10"></Label>
                <TextBox Text="{Binding Level1Option}"
                         Margin="10"
                         Width="260"
                         TextAlignment="Center"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Height="50"
                        Margin="5">
                <Label Content="Level2"
                       Margin="10"></Label>
                <TextBox Text="{Binding Level2Option}"
                         Margin="10"
                         Width="260"
                         TextAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Height="50"
                        Margin="5">
                <Label Content="Level3"
                       Margin="10"></Label>
                <TextBox Text="{Binding Level3Option}"
                         Margin="10"
                         Width="260"
                         TextAlignment="Center"></TextBox>
            </StackPanel>
        </UniformGrid>
        <UniformGrid Grid.Row="1" Columns="2" Rows="1">
            <Button Margin="0,5,0,5"
                    Width="150"
                    Command="{Binding ConfirmCommand}"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="pack://application:,,,/Resources/Icons/Ok.png"
                    Content="{Binding LanguageResources[OK], FallbackValue='OK'}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />

            <Button Margin="0,5,0,5"
                    Width="150"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="pack://application:,,,/Resources/Icons/Cancel.png"
                    Content="{Binding LanguageResources[Cancel], FallbackValue='Cancel'}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
        </UniformGrid>
    </Grid>
</Window>
