<Window x:Class="VSP_88D_CS.Views.Setting.PopUp.UserAccessMatrix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.PopUp"
        mc:Ignorable="d"
        Title="UserAccessMatrix"
        Height="680"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Border BorderBrush="Gray"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Content="{Binding LanguageResources[MatrixUserView_lbl_SetMatrix], FallbackValue='SET MATRIX'}"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Background="#FFEDEEED"></Label>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid Background="White"
                          ItemsSource="{Binding FunctionPermissionItems}"
                          Margin="5"
                          AutoGenerateColumns="False"
                         
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          BorderBrush="Gray"
                          BorderThickness="1">
                    <!--IsReadOnly="{Binding IsEditEnable}"-->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Height"
                                    Value="25"></Setter>
                            <Setter Property="Background"
                                    Value="#FFCFCFD5" />
                            <Setter Property="FontSize"
                                    Value="12" />
                            <Setter Property="BorderBrush"
                                    Value="Black"></Setter>
                            <Setter Property="BorderThickness"
                                    Value="0.5"></Setter>
                            <Setter Property="Foreground"
                                    Value="DarkBlue" />
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn IsReadOnly="True"
                            Binding="{Binding Title}"
                                            Header="{Binding Data.LanguageResources[MatrixUserView_lbl_ItemUser], FallbackValue='Item User'}"
                                            Width="*"></DataGridTextColumn>
                        <DataGridTemplateColumn Width="100">
                            <DataGridTemplateColumn.Header>
                                <Button Content="{Binding Data.LanguageResources[Lbl_UserCapLv1],  FallbackValue='Level1'}"
                                        Command="{Binding DataContext.HeaderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="Level1"
                                        Width="100"
                                        Height="25" />
                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate >
                                    <CheckBox IsChecked="{Binding Level1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              IsEnabled="{Binding DataContext.IsEditEnable, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="100">
                            <DataGridTemplateColumn.Header>
                                <Button Content="{Binding Data.LanguageResources[Lbl_UserCapLv2],  FallbackValue='Level2'}"
                                        Command="{Binding DataContext.HeaderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="Level2"
                                        Width="100"
                                        Height="25" />
                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Level2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Command="{Binding Data.SetMatrixCommand.LevelUseCheckCommand}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              IsEnabled="{Binding DataContext.IsEditEnable, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="100">
                            <DataGridTemplateColumn.Header>
                                <Button Content="{Binding Data.LanguageResources[Lbl_UserCapLv3],  FallbackValue='Level3'}"
                                        Command="{Binding DataContext.HeaderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="Level3"
                                        Width="100"
                                        Height="25" />
                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Level3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Command="{Binding LevelUseCheckCommand}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              IsEnabled="{Binding DataContext.IsEditEnable, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="100">
                            <DataGridTemplateColumn.Header>
                                <Button Content="{Binding Data.LanguageResources[MatrixUserView_lbl_AllowAll],  FallbackValue='Allow All'}"
                                        Command="{Binding DataContext.HeaderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="AllowAll"
                                        Width="100"
                                        Height="25" />
                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding AllowAll, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Command="{Binding Data.SetMatrixCommand.AllowUseCheckCommand}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              IsEnabled="{Binding DataContext.IsEditEnable, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
            <Grid Grid.Row="2">
                <UniformGrid Rows="1">
                    
                <Button Margin="0,5,0,5"
                        Width="180"
                        Command="{Binding EditPermissionCommand}"
                        Style="{StaticResource ImageButtonStyle}"
                        Tag="pack://application:,,,/Resources/Icons/Edit.png"
                        Content="Edit"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                <Button Margin="0,5,0,5"
                        Width="180"
                            Command="{Binding SavePermissionCommand}"
                        Style="{StaticResource ImageButtonStyle}"
                        Tag="pack://application:,,,/Resources/Icons/Ok.png"
                        Content="Save"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                <Button Margin="0,5,0,5"
                        Width="180"
                            Command="{Binding CancelCommand}"
                        Style="{StaticResource ImageButtonStyle}"
                        Tag="pack://application:,,,/Resources/Icons/Cancel.png"
                        Content="Cancel"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                </UniformGrid>

            </Grid>
        </Grid>
    </Border>

</Window>
