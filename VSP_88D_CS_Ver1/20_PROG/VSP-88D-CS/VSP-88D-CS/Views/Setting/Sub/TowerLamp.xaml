<Window x:Class="VSP_88D_CS.Views.Setting.Sub.TowerLamp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.Sub"
        xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
        xmlns:vsl="clr-namespace:VSLibrary.UIComponent.Localization;assembly=VSLibrary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Tower Lamp Setting" Height="325" Width="602">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White" Padding="10" Width="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <DataGrid Grid.Row="0" ItemsSource="{Binding Signals}" AutoGenerateColumns="False" CanUserResizeColumns="False"
                      HeadersVisibility="Column" RowHeaderWidth="0" IsReadOnly="True" FontWeight="Bold">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Item}" 
                                        Width="100" 
                                        FontWeight="Bold">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="{Binding DataContext.LanguageResources[Item], 
                                       RelativeSource={RelativeSource AncestorType=DataGrid}, 
                                       FallbackValue='Item'}"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DataContext.LanguageResources[Red], 
                                           RelativeSource={RelativeSource AncestorType=DataGrid}, 
                                           FallbackValue='Red'}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    ItemsSource="{Binding DataContext.LampStates, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    SelectedItem="{Binding Red, Mode=TwoWay}"
                                    Background="Red" Foreground="White">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DataContext.LanguageResources[Yellow], 
                                           RelativeSource={RelativeSource AncestorType=DataGrid}, 
                                           FallbackValue='Yellow'}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    ItemsSource="{Binding DataContext.LampStates, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    SelectedItem="{Binding Yellow, Mode=TwoWay}"
                                    Background="Yellow">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DataContext.LanguageResources[Green], 
                                           RelativeSource={RelativeSource AncestorType=DataGrid}, 
                                           FallbackValue='Green'}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    ItemsSource="{Binding DataContext.LampStates, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    SelectedItem="{Binding Green, Mode=TwoWay}"
                                    Background="Green" Foreground="White">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DataContext.LanguageResources[Buzzer], 
                                           RelativeSource={RelativeSource AncestorType=DataGrid}, 
                                           FallbackValue='Buzzer'}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    ItemsSource="{Binding DataContext.BuzzerStates, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    SelectedItem="{Binding Buzzer, Mode=TwoWay}"
                                    Background="DarkBlue" Foreground="White">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons -->
            <StackPanel Grid.Row="1"  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0">
                <VSControls:VsButton
                        vsl:VsLocalization.LocalizationKey="Default" Height="50" Width="120" Margin="0,5,5,0"
                        Content="OK"
                        ImageSource="/Resources/Icons/Ok.png"
                        Command="{Binding OkCommand}"/>
                <VSControls:VsButton
                        vsl:VsLocalization.LocalizationKey="Default" Height="50" Width="120" Margin="0,5,5,0"
                        Content="CANCEL"
                        ImageSource="/Resources/Icons/Cancel.png"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
