<UserControl x:Class="VSP_88D_CS.Views.Setting.Sub.SystemParam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.Sub"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             xmlns:vsl="clr-namespace:VSLibrary.UIComponent.Localization;assembly=VSLibrary"
             mc:Ignorable="d" 
             xmlns:view="clr-namespace:VSP_88D_CS.Views.Setting.Sub.SystemParameter"
             d:DesignHeight="720" d:DesignWidth="855">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!--#region LEFT VIEW -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <view:MfcSystemParameter Grid.Row="0" Margin="5" DataContext="{Binding MfcSystemParamViewMode}"/>
                    <view:RfGenSystemParameter Grid.Row="1" Margin="5" DataContext="{Binding RFGenSystemParamViewModel}"/>
                    <view:VacGaugeSystemParameter Grid.Row="2" Margin="5" DataContext="{Binding VacGaugeSystemParamViewModel}"/>
                    <view:VacPumpSystemParameter Grid.Row="3" Margin="5" DataContext="{Binding VacPumpSystemParamViewModel}"/>
                    <view:EtcSystemParameter Grid.Row="4" Margin="5" DataContext="{Binding EtcSystemParamViewModel}"/>
                </Grid>
            </ScrollViewer>
            <!--#endregion LEFT VIEW -->
            <!--#region RIGHT VIEW -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1"  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
                    <!-- SAVE Button -->
                <VSControls:VsButton
                        vsl:VsLocalization.LocalizationKey="Default" Height="50" Width="120" Margin="0,5,5,0"
                        Content="{Binding LanguageResources[Save], FallbackValue='SAVE'}"
                        ImageSource="/Resources/Icons/Ok.png"
                        Command="{Binding SaveCommand}"/>
                <!-- CANCEL Button -->
                <VSControls:VsButton
                        vsl:VsLocalization.LocalizationKey="Default" Height="50" Width="120" Margin="0,5,5,0"
                        Content="{Binding LanguageResources[Cancel], FallbackValue='CANCEL'}"
                        ImageSource="/Resources/Icons/Cancel.png"
                        Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
            <!--#endregion RIGHT VIEW -->
        </Grid>
</UserControl>
