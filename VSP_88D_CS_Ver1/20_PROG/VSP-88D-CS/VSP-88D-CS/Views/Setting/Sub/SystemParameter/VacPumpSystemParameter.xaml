<UserControl
    x:Class="VSP_88D_CS.Views.Setting.Sub.SystemParameter.VacPumpSystemParameter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.Sub.SystemParameter"
    xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="120"
    d:DesignWidth="520"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Thickness x:Key="DefaultMargin">5</Thickness>
    </UserControl.Resources>
    <Grid>
        <GroupBox
            Padding="2"
            FontSize="11"
            FontWeight="Bold"
            Header="VACUUM PUMP ">
            <Border
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  ROW 1  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="2,0,0,0"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
                        <VSControls:VsLabel Margin="{StaticResource DefaultMargin}" Content="USE OIL SENSOR SELECT" />
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
                        <VSControls:VsCheckBox
                            Width="70"
                            Margin="{StaticResource DefaultMargin}"
                            Content="USE"
                            IsChecked="{Binding VacPumpParam.UseOilSensor}" />
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1" />

                    <!--  ROW 2  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="2,0,0,0"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
                        <VSControls:VsLabel Margin="{StaticResource DefaultMargin}" Content="VACUUM OFFSET (0.00 ~ 0.50)" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
                        <VSControls:VsTextBox
                            Width="70"
                            Margin="{StaticResource DefaultMargin}"
                            Text="{Binding VacPumpParam.VacOffset}" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Grid.Column="2"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
                        <VSControls:VsLabel Margin="{StaticResource DefaultMargin}" Content="(Torr)" />
                    </Border>
                </Grid>
            </Border>
        </GroupBox>
    </Grid>
</UserControl>
