<UserControl x:Class="VSP_88D_CS.Views.Setting.Sub.DevicePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Setting.Sub"
             xmlns:local1="clr-namespace:VSP_88D_CS.Converters"
             xmlns:controls="clr-namespace:VSP_88D_CS.Common.Controls"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             xmlns:sub="clr-namespace:VSP_88D_CS.ViewModels.Setting.Sub"
             d:DataContext="{d:DesignInstance Type=sub:DevicePageViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Height="auto"
             Width="auto">
    <UserControl.Resources>
        <local1:DoubleToIsCheckedConverter x:Key="DoubleToIsCheckedConverter" />
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.8*" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="0.8*" />
                        <RowDefinition Height="1.2*" />
                        <RowDefinition Height="0.8*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0"
                            Height="auto"
                            Content="{Binding LanguageResources[DeviceList], FallbackValue='Device List'}"></Button>
                    <VSControls:VsDataGrid Grid.Row="1"
                                           ItemsSource="{Binding Devices, Mode=TwoWay}"
                                           HeadersVisibility="None"
                                           SelectedItem="{Binding SelectedDevice}"
                                           AutoGenerateColumns="False"
                                           IsReadOnly="True"
                                           Background="White"
                                           IsEnabled="{Binding IsEnableDeviceListRegion}"
                                           BorderThickness="1"
                                           BorderBrush="Black">
                        <!--<VSControls:VsDataGrid.Style>
                            <Style TargetType="VSControls:VsDataGrid">
                                <Setter Property="IsEnabled"
                                        Value="True" />
                            </Style>
                        </VSControls:VsDataGrid.Style>-->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="LightBlue" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <VSControls:VsDataGrid.Columns>
                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="⮞"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="Green"
                                                   Width="auto">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}"
                                                                     Value="True">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                    </DataTemplate>

                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding DeviceName}"/>
                        </VSControls:VsDataGrid.Columns>
                    </VSControls:VsDataGrid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <controls:ExtendedVsButton Command="{Binding AddDeviceCommand}"
                                                   Text="{Binding LanguageResources[Add], FallbackValue='Add'}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                                   IsEnabled="{Binding BtnAddInfo.IsEnable}"
                                                   ImageSource="pack://application:,,,/Resources/Icons/AddFile.png"
                                                   Tag="{Binding BtnAddInfo}" />

                        <controls:ExtendedVsButton Grid.Column="2"
                                                   Command="{Binding EditDeviceCommand}"
                                                   Text="{Binding LanguageResources[Edit], FallbackValue='Edit'}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                                   IsEnabled="{Binding BtnAddInfo.IsEnable}"
                                                   ImageSource="pack://application:,,,/Resources/Icons/Edit.png"
                                                   Tag="{Binding BtnEditInfo}" />

                        <controls:ExtendedVsButton Grid.Column="4"
                                                   Command="{Binding DeleteDeviceCommand}"
                                                   Text="{Binding LanguageResources[Delete], FallbackValue='Delete'}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                                   IsEnabled="{Binding BtnAddInfo.IsEnable}"
                                                   ImageSource="pack://application:,,,/Resources/Icons/DeleteFile.png"
                                                   Tag="{Binding BtnDeleteInfo}" />
                    </Grid>

                    <StackPanel Grid.Row="3">
                        <GroupBox Header="{Binding LanguageResources[DeviceName], FallbackValue='Device Name'}"
                                  FontWeight="SemiBold"
                                  BorderBrush="Gray"
                                  BorderThickness="1"
                                  IsEnabled="{Binding IsEnableDeviceNameRegion}">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBox Text="{Binding DeviceName}"
                                         Margin="2,2,20,2"
                                         TextAlignment="Center"
                                         Width="200"
                                         Height="25" />
                                <TextBox Style="{x:Null}"
                                         Text="10"
                                         Margin="2"
                                         TextAlignment="Center"
                                         Width="50"></TextBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <UniformGrid Grid.Row="4"
                                 Columns="2">

                        <controls:ExtendedVsButton Margin="5"
                                                   Command="{Binding ConfirmDeviceCommand}"
                                                   Tag="{Binding BtnConfirmInfo}"
                                                   Text="{Binding LanguageResources[Save], FallbackValue='Save'}"
                                                   ImageSource="pack://application:,,,/Resources/Icons/Save.png"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />

                        <controls:ExtendedVsButton Margin="5"
                                                   Command="{Binding CancelDeviceCommand}"
                                                   Tag="{Binding BtnCancelInfo}"
                                                   Text="{Binding LanguageResources[Cancel], FallbackValue='Cancel'}"
                                                   ImageSource="pack://application:,,,/Resources/Icons/Cancel.png"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                    </UniformGrid>
                </Grid>

            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="5.4*" />
                        <RowDefinition Height="1.4*" />
                        <RowDefinition Height="5.4*" />
                        <!--<RowDefinition Height="1.2*"></RowDefinition>-->
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Label Margin="5"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Content="{Binding LanguageResources[MotorSelection], FallbackValue='Motor Selection'}"
                               VerticalAlignment="Center" />
                        <ComboBox Margin="16,0,0,0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Width="auto"
                                  MinWidth="350"
                                  ItemsSource="{Binding SelectMotors}"
                                  SelectedItem="{Binding SelectedMotor}"
                                  DisplayMemberPath="Display"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="OrangeRed"></ComboBox>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <!--<ContentControl vsmvvm:RegionBehavior.RegionName="TopMotionPage" />-->
                        <local:MotionPara DataContext="{Binding MotionVM1}" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>

                        <UniformGrid Grid.Column="0"
                                     Rows="2"
                                     Columns="2"
                                     Margin="10,0,0,0">
                            <Label Content="Jog Vel."
                                   HorizontalAlignment="Center"></Label>
                            <Label Content="Jog Acc."
                                   HorizontalAlignment="Center"></Label>
                            <TextBox Text="50"
                                     Style="{x:Null}"
                                     Margin="2"
                                     Width="60"></TextBox>
                            <TextBox Text="100"
                                     Style="{x:Null}"
                                     Margin="2"
                                     Width="60"></TextBox>
                        </UniformGrid>

                        <GroupBox Grid.Column="1"
                                  Header="Distance(mm)"
                                  Style="{x:Null}">
                            <UniformGrid Rows="2"
                                         Columns="4">
                                <RadioButton Content="0.001"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=0.001, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="0.1"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=0.1, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="10"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=10, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="40"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=40, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="0.01"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=0.01, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="1"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=1, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="20"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=20, Mode=TwoWay}"></RadioButton>
                                <RadioButton Content="60"
                                             IsChecked="{Binding SelectedDistance, Converter={StaticResource DoubleToIsCheckedConverter}, ConverterParameter=60, Mode=TwoWay}"></RadioButton>
                            </UniformGrid>
                        </GroupBox>

                    </Grid>

                    <Grid Grid.Row="3">
                        <local:MotionPara DataContext="{Binding MotionVM2}">
                            <local:MotionPara.Style>
                                <Style TargetType="local:MotionPara">

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsVisibleMotionControl, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                     Value="false">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </local:MotionPara.Style>
                        </local:MotionPara>
                        <!--<CheckBox  IsChecked="{Binding IsVisibleMotionControl}"></CheckBox>-->
                        <!--<ContentControl vsmvvm:RegionBehavior.RegionName="BottonMotionPage" />-->
                    </Grid>

                    <!--<Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Row="0"
                                 Grid.Column="0"
                                 Text="{Binding LanguageResources[MgzSlotCount], FallbackValue='Mgz. slot count'}"
                                 BorderBrush="Black"
                                 BorderThickness="0.5"
                                 FontWeight="SemiBold"
                                 IsReadOnly="True"
                                 Padding="5"></TextBox>
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding LanguageResources[MgzSlotCount], FallbackValue='20'}"
                                 BorderBrush="Black"
                                 BorderThickness="0.5"
                                 TextAlignment="Right"
                                 Padding="5"></TextBox>
                        <TextBox Grid.Row="0"
                                 Grid.Column="2"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"
                                 FontWeight="SemiBold"></TextBox>
                        <TextBox Grid.Row="0"
                                 Grid.Column="3"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"></TextBox>
                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"
                                 FontWeight="SemiBold"></TextBox>
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"></TextBox>
                        <TextBox Grid.Row="1"
                                 Grid.Column="2"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"
                                 FontWeight="SemiBold"></TextBox>
                        <TextBox Grid.Row="1"
                                 Grid.Column="3"
                                 Text=""
                                 BorderBrush="Black"
                                 BorderThickness="0.5"></TextBox>
                    </Grid>-->
                </Grid>

            </Border>
        </Grid>
    </Grid>
</UserControl>
