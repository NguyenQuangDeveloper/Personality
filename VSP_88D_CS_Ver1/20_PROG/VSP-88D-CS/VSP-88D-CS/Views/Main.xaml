<Window x:Class="VSP_88D_CS.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSP_88D_CS.Views"
        xmlns:views="clr-namespace:VSP_88D_CS.Views.Auto.Sub"
        xmlns:shared="clr-namespace:VSP_88D_CS.Shared"
        xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors;assembly=VSLibrary"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:TopPanel="clr-namespace:VSLibrary.UIComponent.LayoutPanels.TopPanel;assembly=VSLibrary"
        xmlns:VsNavigations="clr-namespace:VSLibrary.UIComponent.VsNavigations;assembly=VSLibrary"
        xmlns:viewmodels="clr-namespace:VSP_88D_CS.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="True"
        Title="Main"
        Height="738"
        Width="1024">
    <Window.InputBindings>
        <KeyBinding Key="F2"
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="F2" />
        <KeyBinding Key="F7"
                    Command="{Binding OpenSequenceMonitorCommand}"
                    CommandParameter="F7" />
    </Window.InputBindings>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding MainClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="1,2,1,2" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="5">
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#F0F0F0"
                                                            Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Border.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="{TemplateBinding Background}"
                                                            Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="2"
                                      Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Background="#FFEEEEEE"
                  Height="738"
                  Width="1024">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>

                <TopPanel:VsTopPanel Grid.Row="0"
                                     LogoSource="/Resources/Icons/VS_LOGO.png">
                    <TopPanel:VsTopPanel.ExtendControl>
                        <views:Cim DataContext="{x:Static shared:SharedInstances.SharedCimViewModel}" />
                    </TopPanel:VsTopPanel.ExtendControl>
                </TopPanel:VsTopPanel>

                <Grid Grid.Row="1"
                      Margin="1">
                    <ContentControl vsmvvm:RegionBehavior.RegionName="MainView" />
                </Grid>

                <VsNavigations:VsNavigationBar Grid.Row="2" Margin="1"
                                               ButtonDatas="{Binding ButtonDatas}"
                                               OnceLogin="{Binding OnceLogin}"
                                               AutoLogoutTimeout="{Binding AutoLogoutTimeout}"/>
                
            </Grid>
        </Viewbox>
    </Grid>
</Window>
