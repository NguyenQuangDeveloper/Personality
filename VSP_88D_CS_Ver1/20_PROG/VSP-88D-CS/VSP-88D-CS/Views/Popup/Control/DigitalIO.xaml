<UserControl x:Class="VSP_88D_CS.Views.Popup.Control.DigitalIO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Popup.Control"
             xmlns:converters="clr-namespace:VSP_88D_CS.Converters"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:RadioButtonConverter x:Key="RadioButtonConverter" />
    </UserControl.Resources>

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Viewbox  Stretch="Fill">
            <!-- Input and Output Section -->
            <Grid  Width="900"
                   Height="500"
                   Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Input Section -->
                <Border Grid.Column="0"
                        Background="#C8FAC8"
                        Margin="2"
                        CornerRadius="5"
                        BorderBrush="Gray"
                        BorderThickness="1">
                    <StackPanel Margin="3">
                        <TextBlock Text="{Binding InputText}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Background="Green"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Width="200"
                                   TextAlignment="Center"
                                   Padding="2" />

                        <ListView ItemsSource="{Binding InputItems}"
                                  BorderThickness="0"
                                  Margin="0"
                                  Height="480">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                    <Setter Property="Background"
                                            Value="Gray" />
                                    <!-- 기본값: False일 때 회색 -->
                                    <Setter Property="FocusVisualStyle"
                                            Value="{x:Null}" />
                                    <Setter Property="Control.Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border>
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="0,0,0,1"
                                            HorizontalAlignment="Stretch">
                                        <Grid Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Stretch 컬럼 (Grid.Column="0") 배경색 변경 -->
                                            <Border Grid.Column="0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background"
                                                                Value="Gray" />
                                                        <!-- 기본값 -->

                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Value}"
                                                                         Value="True">
                                                                <Setter Property="Background"
                                                                        Value="LimeGreen" />
                                                                <!-- Value=True일 때 LimeGreen -->
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock Text="{Binding WireName}"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="Black"
                                                           Padding="2"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" />

                                            </Border>

                                            <TextBlock Text="{Binding StrdataName}"
                                                       Grid.Column="1"
                                                       Foreground="Black"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left" />

                                            <!-- Double-Click Event -->
                                            <Grid.InputBindings>
                                                <MouseBinding Gesture="LeftDoubleClick"
                                                              Command="{Binding DataContext.ToggleItemSelectedCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                              CommandParameter="{Binding}" />
                                            </Grid.InputBindings>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Output Section -->
                <Border Grid.Column="1"
                        Background="#C8FAC8"
                        Margin="2"
                        CornerRadius="5"
                        BorderBrush="Gray"
                        BorderThickness="1">
                    <StackPanel Margin="3">
                        <TextBlock Text="{Binding OutputText}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Background="Red"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Width="200"
                                   TextAlignment="Center"
                                   Padding="2" />

                        <ListView ItemsSource="{Binding OutputItems}"
                                  BorderThickness="0"
                                  Height="480">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                    <Setter Property="Background"
                                            Value="Transparent" />
                                    <Setter Property="FocusVisualStyle"
                                            Value="{x:Null}" />
                                    <Setter Property="Control.Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border>
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="0,0,0,1"
                                            HorizontalAlignment="Stretch">
                                        <Grid Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Stretch 컬럼 (Grid.Column="0") 배경색 변경 -->
                                            <Border Grid.Column="0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background"
                                                                Value="Gray" />
                                                        <!-- 기본값 -->

                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Value}"
                                                                         Value="True">
                                                                <Setter Property="Background"
                                                                        Value="LimeGreen" />
                                                                <!-- Value=True일 때 LimeGreen -->
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock Text="{Binding WireName}"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="Black"
                                                           Padding="2"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" />

                                            </Border>
                                            <TextBlock Text="{Binding StrdataName}"
                                                       Grid.Column="1"
                                                       Foreground="Black"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left" />

                                            <!-- Double-Click Event -->
                                            <Grid.InputBindings>
                                                <MouseBinding Gesture="LeftDoubleClick"
                                                              Command="{Binding DataContext.ToggleItemSelectedCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                              CommandParameter="{Binding}" />
                                            </Grid.InputBindings>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>

        <!-- Bottom Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Input Channel Selection -->
            <Border Grid.Column="0"
                    Background="#F0F0F0"
                    Margin="1"
                    CornerRadius="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <Grid Margin="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 채널 선택 TextBlock -->
                    <VSControls:VsLabel Content="{Binding SelectChannelText}"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Grid.Row="0"
                                        Margin="0,0,0,2" />

                    <!-- RadioButtons & Controls Layout -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 동적으로 생성되는 라디오 버튼 -->
                        <ItemsControl Grid.Column="0"
                                      ItemsSource="{Binding InputRadioButtons}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding Name}"
                                                 IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                 Command="{Binding DataContext.InputSelectedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                 CommandParameter="{Binding Value}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Buttons & CheckBox -->
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0">
                            <VSControls:VsButton Content="{Binding LegendONText}"
                                                 Background="LimeGreen"
                                                 BackgroundTop="LimeGreen"
                                                 ShineColor="LimeGreen"
                                                 ShineColorBottom="LimeGreen"
                                                 Foreground="White"
                                                 Width="90"
                                                 Height="40"
                                                 Margin="0,0,0,5"
                                                 FontWeight="Bold" />
                            <VSControls:VsButton Content="{Binding LegendOFFText}"
                                                 Background="Gray"
                                                 BackgroundTop="Gray"
                                                 ShineColor="Gray"
                                                 ShineColorBottom="Gray"
                                                 Foreground="White"
                                                 Width="90"
                                                 Height="40"
                                                 Margin="0,0,0,5"
                                                 FontWeight="Bold" />
                            <VSControls:VsCheckBox Content="{Binding MotionText}"
                                                   HorizontalAlignment="Center"
                                                   IsChecked="{Binding IsMXMode, Mode=TwoWay}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Output Channel Selection -->
            <Border Grid.Column="1"
                    Background="#F0F0F0"
                    Margin="1"
                    CornerRadius="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 채널 선택 TextBlock -->
                    <VSControls:VsLabel Content="{Binding SelectChannelText}"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Grid.Row="0"
                                        Margin="0,0,0,2" />

                    <!-- RadioButtons & Controls Layout -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 동적으로 생성되는 라디오 버튼 -->
                        <ItemsControl Grid.Column="0"
                                      ItemsSource="{Binding OutputRadioButtons}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <VSControls:VsRadioButton Content="{Binding Name}"
                                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                              Command="{Binding DataContext.OutputSelectedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                              CommandParameter="{Binding Value}" 
                                                              Margin="0,0,0,10"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Buttons & CheckBox -->
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0">

                            <VSControls:VsButton Content="{Binding LegendONText}"
                                                 Background="LimeGreen"
                                                 BackgroundTop="LimeGreen"
                                                 ShineColor="LimeGreen"
                                                 ShineColorBottom="LimeGreen"
                                                 Foreground="White"
                                                 Width="90"
                                                 Height="40"
                                                 Margin="0,0,0,5"
                                                 FontWeight="Bold" />

                            <VSControls:VsButton Content="{Binding LegendOFFText}"
                                                 Background="Gray"
                                                 BackgroundTop="Gray"
                                                 ShineColor="Gray"
                                                 ShineColorBottom="Gray"
                                                 Foreground="White"
                                                 Width="90"
                                                 Height="40"
                                                 Margin="0,0,0,5"
                                                 FontWeight="Bold" />

                            <CheckBox Content="{Binding MotionText}"
                                      HorizontalAlignment="Center"
                                      Visibility="Hidden" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
