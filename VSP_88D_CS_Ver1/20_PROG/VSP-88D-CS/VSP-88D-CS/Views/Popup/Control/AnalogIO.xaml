<UserControl x:Class="VSP_88D_CS.Views.Popup.Control.AnalogIO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSP_88D_CS.Views.Popup.Control"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls;assembly=VSLibrary"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 데이터 그리드 -->
        <DataGrid Grid.Column="0"
                  Name="DataGridValues"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  ItemsSource="{Binding DataGridValues}"
                  GridLinesVisibility="All"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalGridLinesBrush="#E0E0E0"
                  IsReadOnly="True"
                  CanUserSortColumns="False"
                  BorderBrush="#D0D0D0"
                  BorderThickness="1">

            <!-- 컬럼 헤더 스타일 -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"
                            Value="#F0F4F8" />
                    <Setter Property="Foreground"
                            Value="#102A43" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                    <Setter Property="FontSize"
                            Value="14" />
                    <Setter Property="Padding"
                            Value="10,8" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="BorderBrush"
                            Value="#D0D0D0" />
                    <Setter Property="BorderThickness"
                            Value="0,0,1,1" />
                    <Setter Property="Height"
                            Value="40" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#D9E2EC" />
                            <Setter Property="BorderBrush"
                                    Value="#627D98" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="시간"
                                    Binding="{Binding Time}"
                                    Width="1.5*" />
                <DataGridTextColumn Header="가스1"
                                    Binding="{Binding Gas1}"
                                    Width="1*" />
                <DataGridTextColumn Header="가스2"
                                    Binding="{Binding Gas2}"
                                    Width="1*" />
                <DataGridTextColumn Header="진공"
                                    Binding="{Binding Vacuum}"
                                    Width="1*" />
                <DataGridTextColumn Header="RF.Fwd"
                                    Binding="{Binding RFFwd}"
                                    Width="1*" />
                <DataGridTextColumn Header="RF.Ref"
                                    Binding="{Binding RFRe}"
                                    Width="1*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 오른쪽 컨트롤 영역 -->
        <Grid Grid.Column="1"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- GENERATOR POWER 섹션 -->
            <GroupBox Header="GENERATOR POWER"
                      Grid.Row="0"
                      Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBox Width="65"
                             Height="30"
                             Margin="0,0,10,0"
                             Text="0" />
                    <Button Content="SET"
                            Width="60"
                            Height="30" />
                </StackPanel>
            </GroupBox>

            <!-- 가스1 설정 섹션 -->
            <GroupBox Header="가스1"
                      Grid.Row="1"
                      Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBox Width="65"
                             Height="30"
                             Margin="0,0,10,0"
                             Text="0" />
                    <Button Content="SET"
                            Width="60"
                            Height="30" />
                </StackPanel>
            </GroupBox>

            <!-- 가스2 설정 섹션 -->
            <GroupBox Header="가스2"
                      Grid.Row="2"
                      Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBox Width="65"
                             Height="30"
                             Margin="0,0,10,0"
                             Text="0" />
                    <Button Content="SET"
                            Width="60"
                            Height="30" />
                </StackPanel>
            </GroupBox>

            <!-- Value Type 섹션 -->
            <GroupBox Header="Value Type"
                      Grid.Row="4"
                      VerticalAlignment="Bottom">
                <StackPanel Margin="10">
                    <VSControls:VsRadioButton Content="Analog"
                                              GroupName="ValueType"
                                              IsChecked="True"
                                              Margin="0,0,0,5" />
                    <VSControls:VsRadioButton Content="Digital"
                                              GroupName="ValueType" />
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
