<UserControl
    x:Class="AlarmConfig.Views.Tops.ImageTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlarmConfig.Views.Tops"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="130"
    mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="DemiBold"
                            Foreground="Black"
                            Text="{Binding LanguageResources[Height], FallbackValue='Height'}" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding IncreaseHeightCommand}">
                                <Image
                                    Margin="4"
                                    Source="pack://application:,,,/AlarmConfig;component/Resources/Images/Increase.png"
                                    Stretch="Fill" />
                            </Button>
                            <Button
                                Grid.Column="1"
                                Width="28"
                                Height="28"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding DecreaseHeightCommand}">
                                <Image
                                    Margin="4"
                                    Source="pack://application:,,,/AlarmConfig;component/Resources/Images/Decrease.png"
                                    Stretch="Fill" />
                            </Button>
                        </Grid>
                        <TextBox
                            Grid.Row="2"
                            Margin="2,0,2,2"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="Black"
                            BorderThickness="0.2"
                            FontSize="10"
                            Text="{Binding Height, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="DemiBold"
                            Foreground="Black"
                            Text="{Binding LanguageResources[Width], FallbackValue='Width'}" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding IncreaseWidthCommand}">
                                <Image
                                    Margin="4"
                                    Source="pack://application:,,,/AlarmConfig;component/Resources/Images/Increase.png"
                                    Stretch="Fill" />
                            </Button>
                            <Button
                                Grid.Column="1"
                                Width="28"
                                Height="28"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding DecreaseWidthCommand}">
                                <Image
                                    Margin="4"
                                    Source="pack://application:,,,/AlarmConfig;component/Resources/Images/Decrease.png"
                                    Stretch="Fill" />
                            </Button>
                        </Grid>
                        <TextBox
                            Grid.Row="2"
                            Margin="2,0,2,2"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="Black"
                            BorderThickness="0.2"
                            FontSize="10"
                            Text="{Binding Width, Mode=TwoWay}" />
                    </Grid>
                </Grid>
                <Label
                    Grid.Row="2"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Bottom"
                    Content="{Binding LanguageResources[Image], FallbackValue='Image'}"
                    FontWeight="DemiBold"
                    Foreground="Gray" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
