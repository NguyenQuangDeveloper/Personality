<UserControl
    x:Class="AlarmConfig.Views.Tops.FontTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlarmConfig.Views.Tops"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="Background" Value="#AEEEEE" />
            <Setter Property="BorderBrush" Value="#76C7C0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                                <Grid>
                                    <ContentPresenter
                                        x:Name="ContentPresenter"
                                        Margin="5,0,25,0"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}" />

                                    <ToggleButton
                                        x:Name="DropDownButton"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="15"
                                        HorizontalAlignment="Right"
                                        IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                </Grid>
                            </Border>
                            <Popup
                                x:Name="PART_Popup"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                AllowsTransparency="True"
                                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Placement="Bottom"
                                StaysOpen="False">
                                <Border
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                    Background="White"
                                    BorderBrush="#76C7C0"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <GroupBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="1,0,1,0"
                            BorderThickness="0.3"
                            FontSize="12"
                            Header="{Binding LanguageResources[FontSize], FallbackValue='Font Size'}">
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="5"
                                ItemsSource="{Binding FontSizes}"
                                SelectedItem="{Binding SelectedFontSize}"
                                Style="{StaticResource CustomComboBoxStyle}" />
                        </GroupBox>
                        <GroupBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="1,0,1,0"
                            BorderThickness="0.3"
                            FontSize="12"
                            Header="{Binding LanguageResources[LineWidth], FallbackValue='Line width'}">
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="5"
                                ItemsSource="{Binding LineWidths}"
                                SelectedItem="{Binding SelectedLineWidth}"
                                Style="{StaticResource CustomComboBoxStyle}" />
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Width="20"
                                Margin="4,2,2,2"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                BorderBrush="Transparent"
                                Command="{Binding SelectedFontWeightCommand}"
                                Content="B"
                                FontSize="20"
                                FontWeight="Bold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBold}" Value="True">
                                                <Setter Property="Background" Value="Cyan" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button
                                Width="20"
                                Margin="4,2,2,2"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                BorderBrush="Transparent"
                                Command="{Binding SelectedFontStyleCommand}"
                                Content="i"
                                FontSize="20"
                                FontStyle="Italic"
                                FontWeight="Bold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsItalic}" Value="True">
                                                <Setter Property="Background" Value="Cyan" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Label
                    Grid.Row="2"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Bottom"
                    Content="{Binding LanguageResources[Font], FallbackValue='Font'}"
                    FontWeight="DemiBold"
                    Foreground="Gray" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
