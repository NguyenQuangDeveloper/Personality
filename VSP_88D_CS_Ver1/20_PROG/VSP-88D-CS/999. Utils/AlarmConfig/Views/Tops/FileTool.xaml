<UserControl x:Class="AlarmConfig.Views.Tops.FileTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AlarmConfig.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlarmConfig.Views.Tops"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tops="clr-namespace:AlarmConfig.ViewModels.Tops"
             d:DataContext="{d:DesignInstance Type=tops:FileToolViewModel}"
             d:DesignHeight="150"
             d:DesignWidth="250"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <Style x:Key="CustomComboBoxStyle"
               TargetType="ComboBox">
            <Setter Property="HorizontalContentAlignment"
                    Value="Right" />
            <Setter Property="Background"
                    Value="#AEEEEE" />
            <Setter Property="BorderBrush"
                    Value="#76C7C0" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="2">
                                <Grid>
                                    <ContentPresenter x:Name="ContentPresenter"
                                                      Margin="5,0,15,0"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center"
                                                      Content="{TemplateBinding SelectionBoxItem}" />

                                    <ToggleButton x:Name="DropDownButton"
                                                  Grid.Column="1"
                                                  Width="10"
                                                  Height="15"
                                                  HorizontalAlignment="Right"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                   Placement="Bottom"
                                   StaysOpen="False">
                                <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="White"
                                        BorderBrush="#76C7C0"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <ScrollViewer>
                                        <StackPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ItemsPresenter />
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <RadioButton Grid.Row="0"
                                 Margin="3,0,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Content="{Binding LanguageResources[CreateImageWithAlarmCode], FallbackValue='Create image with alarm code'}"
                                 FontSize="12"
                                 IsChecked="{Binding SelectCreateImage, ConverterParameter=WithAlarmCode, Converter={StaticResource EnumToBooleanConverter}, Mode=TwoWay}" />
                    <RadioButton Grid.Row="1"
                                 Margin="3,0,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Content="{Binding LanguageResources[CreateImageWithAlarmName], FallbackValue='Create image with alarm name'}"
                                 FontSize="12"
                                 IsChecked="{Binding SelectCreateImage, ConverterParameter=WithAlarmName, Converter={StaticResource EnumToBooleanConverter}, Mode=TwoWay}" />
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CreateImageCommand}">
                            <Image Source="pack://application:,,,/AlarmConfig;component/Resources/Images/create1.png"
                                   Stretch="Uniform" />
                        </Button>
                        <Button Grid.Column="1"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding DeleteImageCommand}">
                            <Image Source="pack://application:,,,/AlarmConfig;component/Resources/Images/DeleteFile.png"
                                   Stretch="Uniform" />
                        </Button>
                        <Button Grid.Column="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding SelectImageFileCommand}">
                            <Image Source="pack://application:,,,/AlarmConfig;component/Resources/Images/open-folder.png"
                                   Stretch="Uniform" />
                        </Button>
                        <Button Grid.Column="3"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding ToggleAnimationCommand}">
                            <Image Stretch="Uniform">
                                <Image.Style>
                                    <Style TargetType="Image">

                                        <Setter Property="Source"
                                                Value="pack://application:,,,/AlarmConfig;component/Resources/Images/start.png" />

                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsAnimating}"
                                                               Value="True" />
                                                </MultiDataTrigger.Conditions>

                                                <Setter Property="Source"
                                                        Value="pack://application:,,,/AlarmConfig;component/Resources/Images/stop.png" />

                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Button>
                        <Grid Grid.Column="4">
                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{Binding SaveCommand}">
                                <Image Source="pack://application:,,,/AlarmConfig;component/Resources/Images/menu-save.png" />
                            </Button>
                        </Grid>
                        <!--<Button Grid.Column="2" Command="{Binding CommandSupperUserAlarmVM.ToggleAnimationCommand}" Background="Transparent" BorderBrush="Transparent">
                    <Image Stretch="Uniform" Source="/VIEW/Resource/Image/start.png"></Image>
                </Button>-->
                    </Grid>
                </Grid>
                <Label Grid.Row="2"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Bottom"
                       Content="{Binding LanguageResources[File], FallbackValue='File'}"
                       FontWeight="DemiBold"
                       Foreground="Gray" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
