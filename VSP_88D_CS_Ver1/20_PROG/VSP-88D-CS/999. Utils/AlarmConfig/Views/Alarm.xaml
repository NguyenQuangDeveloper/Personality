<UserControl
    x:Class="AlarmConfig.Views.Alarm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AlarmConfig.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucBottom="clr-namespace:AlarmConfig.Views.Bottoms"
    xmlns:ucCenter="clr-namespace:AlarmConfig.Views.Centers"
    xmlns:ucLeft="clr-namespace:AlarmConfig.Views.Lefts"
    xmlns:ucRight="clr-namespace:AlarmConfig.Views.Rights"
    xmlns:ucTop="clr-namespace:AlarmConfig.Views.Tops"
    x:Name="AlarmControl"
    d:DesignHeight="680"
    d:DesignWidth="1400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{x:Null}" TargetType="Button" />
        <Style BasedOn="{x:Null}" TargetType="GroupBox" />
    </UserControl.Resources>
    <Grid Background="LightGray" DataContext="{Binding ViewModel, ElementName=AlarmControl}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <ucLeft:AlarmCode DataContext="{Binding AlarmCodeVM}" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#FFEAEBEC">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="210" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <ucTop:ZoomTool DataContext="{Binding ZoomToolVM}" />
                        </Grid>
                        <Grid Grid.Column="1">
                            <ucTop:ColorTool DataContext="{Binding ColorToolVM}" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <ucTop:FileTool DataContext="{Binding FileToolVM}" />
                        </Grid>
                        <Grid Grid.Column="3">
                            <ucTop:ImageTool DataContext="{Binding ImageToolVM}" />
                        </Grid>
                        <Grid Grid.Column="4">
                            <ucTop:FontTool DataContext="{Binding FontToolVM}" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="#FFC3D1DE">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <ucCenter:DrawingArea Height="350" DataContext="{Binding DrawingAreaVM}" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <ucBottom:AlarmInfo DataContext="{Binding AlarmInfoVM}" />
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Background="#FF3EABF7">
                    <ucRight:ShapeBlock DataContext="{Binding ShapeBlockVM}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
