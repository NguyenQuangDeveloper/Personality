<UserControl x:Class="VSLibrary.UIComponent.KeyPads.VsKeyPadNumberPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSLibrary.UIComponent.KeyPads"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="220">
<!-- 
    ▣ Resource 등록 영역
    ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    ⦿ KeyPad 스타일 정의 (디자인 타임 포함)
    ⦿ /UIComponent/Styles/KeyPadStyles.xaml 병합

    ⟶ 이 XAML은 개별 KeyPad 컨트롤에서만 사용됨
    ⟶ App.xaml 전역 등록 불필요
    ⟶ 디자인 타임에서도 스타일 적용 가능
-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/VSLibrary;component/UIComponent/Styles/KeyPadStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 입력값 표시 -->
            <Grid  Grid.Row="0">
                <Border Grid.Row="0" Margin="4" Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="2">
                    <TextBox x:Name="InputBox"
                      Text="{Binding InputValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      TextAlignment="Right"
                      VerticalContentAlignment="Center"
                      FontSize="28"
                      Padding="5"
                      BorderThickness="0"
                      Background="Transparent"
                      IsReadOnly="True"
                      Foreground="#333" />
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding MinValue, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='Min: {0}'}"
                    FontSize="14" 
                    Foreground="#666" 
                    Margin="10,5,5,0"/>
                    <TextBlock Text="{Binding MaxValue, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='Max: {0}'}"
                    FontSize="14" 
                    Foreground="#666" 
                    Margin="5,5,10,0"/>
                </StackPanel>
            </Grid>

            <!-- 숫자 버튼 -->
            <Viewbox  Grid.Row="1">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- 첫 번째 줄 -->
                    <Button Content="7" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="0" Grid.Column="0"/>
                    <Button Content="8" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="0" Grid.Column="1"/>
                    <Button Content="9" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="0" Grid.Column="2"/>
                    <Button Content="C" Style="{StaticResource KeypadButtonStyle}" Background="#F44336" Click="Clear_Click" Grid.Row="0" Grid.Column="3"/>

                    <!-- 두 번째 줄 -->
                    <Button Content="4" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="1" Grid.Column="0"/>
                    <Button Content="5" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="1" Grid.Column="1"/>
                    <Button Content="6" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="1" Grid.Column="2"/>
                    <Button Content="←" Style="{StaticResource KeypadButtonStyle}" Click="Backspace_Click" Grid.Row="1" Grid.Column="3"/>

                    <!-- 세 번째 줄 -->
                    <Button Content="1" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="2" Grid.Column="0"/>
                    <Button Content="2" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="2" Grid.Column="1"/>
                    <Button Content="3" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Grid.Row="2" Grid.Column="2"/>
                    <Button Content="OK" Style="{StaticResource KeypadButtonStyle}" Click="OK_Click" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Height="auto"/>

                    <!-- 네 번째 줄 -->
                    <Button Content="0" Style="{StaticResource KeypadButtonStyle}" Click="Button_Click" Width="auto" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
                    <Button Content="." Style="{StaticResource KeypadButtonStyle}" Click="DotButton_Click" Grid.Row="3" Grid.Column="2" />
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
