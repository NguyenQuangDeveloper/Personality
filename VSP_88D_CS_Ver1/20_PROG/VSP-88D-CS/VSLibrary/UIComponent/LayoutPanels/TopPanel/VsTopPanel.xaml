<UserControl x:Class="VSLibrary.UIComponent.LayoutPanels.TopPanel.VsTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls"
             xmlns:converters="clr-namespace:VSLibrary.UIComponent.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:VSLibrary.UIComponent.LayoutPanels.TopPanel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors"
             d:DesignHeight="54"
             d:DesignWidth="1024"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="RedLampConverter"
                                            OffBrush="#5B0000"
                                            OnBrush="#FF0000" />
        <converters:BooleanToBrushConverter x:Key="YellowLampConverter"
                                            OffBrush="#9A9A00"
                                            OnBrush="#FFFF00" />
        <converters:BooleanToBrushConverter x:Key="GreenLampConverter"
                                            OffBrush="#007000"
                                            OnBrush="#32CD32" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="1"
                Background="White"
                BorderBrush="#FF88AACC"
                BorderThickness="2"
                CornerRadius="5"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <i:Interaction.Behaviors>
                <vsmvvm:WindowDragBehavior />
            </i:Interaction.Behaviors>
            <Image Source="{Binding LogoSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Uniform" />
        </Border>

        <Border Grid.Column="1"
                Margin="1"
                Background="White"
                BorderBrush="#FF88AACC"
                BorderThickness="2"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="1"
                        Background="White"
                        BorderBrush="#FF88AACC"
                        BorderThickness="2"
                        CornerRadius="5">
                    <VSControls:VsTextBlock Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Text="{Binding EquipmentName}" />
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="0"
                        Margin="1,0,1,1"
                        Background="White"
                        BorderBrush="#FF88AACC"
                        BorderThickness="2"
                        CornerRadius="5">
                    <VSControls:VsTextBlock Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Text="{Binding CurrentMenu}" />
                </Border>
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Margin="1,0,1,1"
                        Background="White"
                        BorderBrush="#FF88AACC"
                        BorderThickness="2"
                        CornerRadius="5">
                    <VSControls:VsTextBlock Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Text="{Binding EquipmentStatus}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                Margin="1"
                Background="White"
                BorderBrush="#FF88AACC"
                BorderThickness="2"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <VSControls:VsTextBlock Grid.Row="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Text="{Binding DateString, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Margin="1"
                        Background="White"
                        BorderBrush="#FF88AACC"
                        BorderThickness="2"
                        CornerRadius="5">
                    <VSControls:VsTextBlock Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            Text="{Binding TimeString, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="3"
                Margin="1"
                Background="White"
                BorderBrush="#FF88AACC"
                BorderThickness="2"
                CornerRadius="5">
            <VSControls:VsTextBlock Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="{Binding AppVersion, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Border>

        <ContentPresenter Content="{Binding ExtendControl, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Grid.Column="4" />

        <Border Grid.Column="5"
                Margin="1"
                Background="White"
                BorderBrush="#FF88AACC"
                BorderThickness="2"
                CornerRadius="5">
            <Grid Margin="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Background="{Binding RedLamp, Converter={StaticResource RedLampConverter}}" />
                <Border Grid.Row="1"
                        Background="{Binding YellowLamp, Converter={StaticResource YellowLampConverter}}" />
                <Border Grid.Row="2"
                        Background="{Binding GreenLamp, Converter={StaticResource GreenLampConverter}}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
