<UserControl x:Class="VSLibrary.UIComponent.Common.ButtonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSLibrary.UIComponent.Common"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="400"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Viewbox Stretch="Fill">
        <Grid>
            <Border Padding="0"
                    Background="White"
                    CornerRadius="10"
                    Visibility="Visible">
                <ItemsControl ItemsSource="{Binding ButtonMenus}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!--  Rows와 Columns를 뷰모델에 바인딩  -->
                            <UniformGrid Columns="{Binding Columns, Mode=OneWay}"
                                         Rows="{Binding Rows, Mode=OneWay}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Button Width="{Binding DataContext.ButtonWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    Height="{Binding DataContext.ButtonHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    Margin="2,0,0,2"
                                    Command="{Binding SelectMenuItemCommand}"
                                    CommandParameter="{Binding}"
                                    IsEnabled="{Binding IsEnabled}"
                                    Style="{StaticResource CustomButtonStyle}"
                                    Visibility="{Binding Visibility}">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                    <Image Width="24"
                                           Height="24"
                                           Source="{Binding ImagePath}" />
                                    <TextBlock HorizontalAlignment="Center"
                                               FontSize="12"
                                               Foreground="White"
                                               Text="{Binding MenuText}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
