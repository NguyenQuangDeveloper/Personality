<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VSLibrary.UIComponent.VSControls">
    <!--  라디오버튼 배경 그라데이션  -->
    <LinearGradientBrush x:Key="RadioOuterGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#FFF" />
        <GradientStop Offset="1" Color="#E0E9F8" />
    </LinearGradientBrush>

    <!--  선택시 내부 동그라미  -->
    <RadialGradientBrush x:Key="RadioInnerGradient" Center="0.5,0.5" GradientOrigin="0.3,0.3" RadiusX="0.55" RadiusY="0.55">
        <GradientStop Offset="0.0" Color="#3D9EFF" />
        <GradientStop Offset="1.0" Color="#007ACC" />
    </RadialGradientBrush>

    <Style TargetType="{x:Type local:VsRadioButton}">
        <Setter Property="Foreground" Value="#143A5A" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Padding" Value="7,2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VsRadioButton}">
                    <Border
                        x:Name="Border"
                        Padding="{TemplateBinding Padding}"
                        Background="Transparent"
                        BorderBrush="#B7C3D1"
                        BorderThickness="1"
                        CornerRadius="6">
                        <DockPanel VerticalAlignment="Center">
                            <Grid Margin="0,0,10,0" VerticalAlignment="Center">
                                <!--  바깥 원: 그림자 효과  -->
                                <Ellipse Width="18" Height="18">
                                    <Ellipse.Effect>
                                        <DropShadowEffect
                                            BlurRadius="3"
                                            Direction="270"
                                            Opacity="0.25"
                                            ShadowDepth="1"
                                            Color="#444" />
                                    </Ellipse.Effect>
                                    <Ellipse.Fill>
                                        <StaticResource ResourceKey="RadioOuterGradient" />
                                    </Ellipse.Fill>
                                    <Ellipse.Stroke>
                                        <SolidColorBrush Color="#A0B8D6" />
                                    </Ellipse.Stroke>
                                    <Ellipse.StrokeThickness>1.5</Ellipse.StrokeThickness>
                                </Ellipse>
                                <!--  선택시 내부 원  -->
                                <Ellipse
                                    x:Name="PART_CheckedMark"
                                    Width="10"
                                    Height="10"
                                    Visibility="Collapsed">
                                    <Ellipse.Fill>
                                        <StaticResource ResourceKey="RadioInnerGradient" />
                                    </Ellipse.Fill>
                                    <Ellipse.Stroke>
                                        <SolidColorBrush Color="#007ACC" />
                                    </Ellipse.Stroke>
                                    <Ellipse.StrokeThickness>0.7</Ellipse.StrokeThickness>
                                </Ellipse>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  선택됨: 내부 원 표시  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_CheckedMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <!--  마우스 오버  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#3299FF" />
                        </Trigger>
                        <!--  눌림  -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#004B89" />
                        </Trigger>
                        <!--  비활성화  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#EEE" />
                            <Setter TargetName="PART_CheckedMark" Property="Fill" Value="#BBB" />
                            <Setter Property="Foreground" Value="#BBB" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>