<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VSLibrary.UIComponent.VSControls">

    <Style TargetType="{x:Type local:VsPasswordBox}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="2,3,0,0" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VsPasswordBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Border
                            x:Name="Border"
                            Grid.Row="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <Grid Margin="4,8,4,4">
                                <TextBlock
                                    x:Name="FloatingLabel"
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Top"
                                    FontSize="8"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    RenderTransformOrigin="0,0"
                                    Text="{TemplateBinding Hint}">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="8" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>

                                <PasswordBox
                                    x:Name="PART_PasswordBox"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="{TemplateBinding FontSize}" />
                            </Grid>
                        </Border>

                        <TextBlock
                            x:Name="ErrorText"
                            Grid.Row="1"
                            Height="9"
                            Margin="8,0,8,0"
                            FontSize="7"
                            Foreground="Red"
                            Text="{TemplateBinding Error}"
                            Visibility="Visible" />
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!--  포커스가 있을 때  -->
                        <Trigger SourceName="PART_PasswordBox" Property="IsFocused" Value="True">
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="Blue" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="Blue" />
                            <Setter TargetName="FloatingLabel" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="-8" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!--  입력값이 있을 때 (포커스 없어도 위에 유지)  -->
                        <Trigger Property="local:VsPasswordBox.IsPasswordEmpty" Value="False">
                            <Setter TargetName="FloatingLabel" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="-8" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!--  입력값 없고 포커스도 없을 때만 → 아래로  -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:VsPasswordBox.IsPasswordEmpty), RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                <Condition Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="FloatingLabel" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="8" />
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <!--  에러 시 테두리 및 메시지  -->
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Red" />
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="Red" />
                            <Setter TargetName="ErrorText" Property="Visibility" Value="Visible" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
