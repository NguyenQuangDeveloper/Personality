<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VSLibrary.UIComponent.VsCharts"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Style TargetType="{x:Type local:VsChart}">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="BorderThickness" Value="1" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VsChart}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <lvc:CartesianChart
                            x:Name="PART_Chart"
                            Series="{TemplateBinding Series}"
                            LegendLocation="{TemplateBinding LegendLocation}"
                            DisableAnimations="True">

                            <lvc:CartesianChart.ChartLegend>
                                <lvc:DefaultLegend Margin="0,20,0,0" />
                            </lvc:CartesianChart.ChartLegend>

                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis MinValue="{TemplateBinding XAxisMin}"
                                          MaxValue="{TemplateBinding XAxisMax}"
                                          Foreground="Black"
                                          FontWeight="Bold"
                                          FontSize="13"
                                          LabelFormatter="{x:Static local:VsChart.FormatDateTime}">
                                    <lvc:Axis.Separator>
                                        <!-- 바인딩 소스를 더 안정적인 FindAncestor 방식으로 수정 -->
                                        <lvc:Separator Stroke="Black" Step="{TemplateBinding XAxisStep}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="{TemplateBinding LeftAxisTitle}"
                                          Position="LeftBottom"
                                          MinValue="0"
                                          MaxValue="{TemplateBinding LeftAxisMax}"
                                          Foreground="Black"
                                          FontWeight="Bold"
                                          FontSize="13"
                                          LabelFormatter="{x:Static local:VsChart.FormatSmart}">
                                    <lvc:Axis.Separator>
                                        <!-- 바인딩 소스를 더 안정적인 FindAncestor 방식으로 수정 -->
                                        <lvc:Separator Stroke="Black" Step="{TemplateBinding LeftAxisStep}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>

                                <lvc:Axis Title="{TemplateBinding RightAxisTitle}"
                                          Position="RightTop"
                                          MinValue="0"
                                          MaxValue="{TemplateBinding RightAxisMax}"
                                          Foreground="Black"
                                          FontWeight="Bold"
                                          FontSize="13"
                                          LabelFormatter="{x:Static local:VsChart.FormatN1}">
                                    <lvc:Axis.Separator>
                                        <!-- 바인딩 소스를 더 안정적인 FindAncestor 방식으로 수정 -->
                                        <lvc:Separator Stroke="Black" Step="{TemplateBinding RightAxisStep}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
