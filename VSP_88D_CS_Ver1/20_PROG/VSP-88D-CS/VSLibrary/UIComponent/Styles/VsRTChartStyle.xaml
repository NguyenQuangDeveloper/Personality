                                Text="{TemplateBinding ChartTitle}"
                                FontSize="{TemplateBinding ChartTitleFontSize}"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                Margin="0,5"
                                DockPanel.Dock="Top"/>
                            
