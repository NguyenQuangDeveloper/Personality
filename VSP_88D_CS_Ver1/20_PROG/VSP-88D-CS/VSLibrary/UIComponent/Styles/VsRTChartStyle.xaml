                            <DockPanel>
                                <!-- 3) 차트 영역 -->
                                <lvc:CartesianChart
                                x:Name="PART_Chart"
                                EasingFunction="{x:Null}"
                                Series="{TemplateBinding Series}"
                                XAxes="{TemplateBinding XAxes}"
                                YAxes="{TemplateBinding YAxes}"
                                DrawMarginFrame="{TemplateBinding DrawMarginFrame}"
                                LegendPosition="Bottom"/>
                            </DockPanel>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
