<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CustomGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <!--  Header 영역  -->
                        <Border
                            x:Name="HeaderBorder"
                            Padding="0"
                            Background="#E3F2FD"
                            CornerRadius="8,8,0,0">
                            <ContentPresenter
                                Margin="8"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                ContentSource="Header" />
                        </Border>

                        <!--  Content 영역  -->
                        <Border
                            x:Name="ContentBorder"
                            Margin="0,30,0,0"
                            BorderBrush="#BBDEFB"
                            BorderThickness="2">
                            <ContentPresenter Margin="8" ContentSource="Content" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#C5D6F5" />
                            <Setter TargetName="ContentBorder" Property="Background" Value="#FFFF" />
                        </Trigger>
                        <!--  비활성화 상태  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#F5F5F5" />
                            <Setter TargetName="HeaderBorder" Property="Opacity" Value="0.6" />
                            <Setter TargetName="ContentBorder" Property="BorderBrush" Value="#E0E0E0" />
                            <Setter TargetName="ContentBorder" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>