<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VSLibrary.UIComponent.VSControls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="{x:Type local:VsTextBox}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="2,3,0,0" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VsTextBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--  바깥 테두리  -->
                        <Border
                            x:Name="Border"
                            Grid.Row="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <Grid Margin="4,8,4,4">
                                <!--  힌트 텍스트 (Floating Label)  -->
                                <!--  기본 상태: 라벨이 위로 올라간 상태  -->
                                <TextBlock
                                    x:Name="FloatingLabel"
                                    Margin="0"
                                    VerticalAlignment="Top"
                                    FontSize="8"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    RenderTransformOrigin="0,0"
                                    Text="{TemplateBinding Hint}">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform Y="-8" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>

                                <!--  실제 입력 영역  -->
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Margin="0"
                                    Focusable="False" />
                            </Grid>
                        </Border>

                        <!--  에러 메시지  -->
                        <TextBlock
                            x:Name="ErrorText"
                            Grid.Row="1"
                            Margin="8,0,8,0"
                            FontSize="7"
                            Foreground="Red"
                            Text="{TemplateBinding Error}"
                            Visibility="Visible" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--  포커스가 있을 때: 파란색으로 강조  -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="Blue" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="Blue" />
                        </Trigger>

                        <!--  [수정] MultiTrigger -> MultiDataTrigger로 변경하고 조건을 Binding으로 수정  -->
                        <!--  '라벨이 내려가야 하는 유일한 경우'에 대한 트리거  -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="" />
                                <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="False" />
                            </MultiDataTrigger.Conditions>

                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="Gray" />
                            <Setter TargetName="FloatingLabel" Property="FontSize" Value="8" />
                            <Setter TargetName="FloatingLabel" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="8" />
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <!--  에러가 있는 경우 테두리 및 메시지 표시  -->
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Red" />
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="Red" />
                            <Setter TargetName="ErrorText" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
