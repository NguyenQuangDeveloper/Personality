<UserControl
    x:Class="VSLibrary.UIComponent.VsLogin.VsLoginControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VSControls="clr-namespace:VSLibrary.UIComponent.VSControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:VSLibrary.UIComponent.VsLogin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vsmvvm="clr-namespace:VSLibrary.Common.MVVM.Behaviors"
    d:DesignHeight="400"
    d:DesignWidth="340"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid Grid.Row="0" Background="#2C3E50">
            <i:Interaction.Behaviors>
                <vsmvvm:WindowDragBehavior />
            </i:Interaction.Behaviors>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--  Icon  -->
                <ColumnDefinition Width="*" />
                <!--  Title  -->
                <ColumnDefinition Width="40" />
                <!--  Close Button  -->
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TxtIcon"
                Margin="10,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="🔐" />

            <TextBlock
                x:Name="TxtTitle"
                Grid.Column="1"
                Margin="6,0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="White"
                Text="Login" />

            <!--  X 버튼  -->
            <Button
                Grid.Column="2"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding CloseCommand}"
                Content="✖"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>

        <Grid Grid.Row="1" Margin="20,40,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  타이틀 이미지  -->
            <Image
                Grid.Row="0"
                Height="145"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Source="/VSLibrary;component/UIComponent/Resources/user.png" />

            <!--  ID  -->
            <VSControls:VsTextBox
                Grid.Row="1"
                Height="45"
                Margin="0,0,0,10"
                Error="{Binding IdError}"
                Hint="ID"
                Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" />

            <!--  PW  -->
            <VSControls:VsPasswordBox
                Grid.Row="2"
                Height="42"
                Margin="0,0,0,10"
                Error="{Binding PasswordError}"
                FontSize="16"
                Hint="Password"
                Password="{Binding Password, Mode=TwoWay}" />

            <!--  로그인 버튼  -->
            <VSControls:VsButton
                Grid.Row="3"
                Height="45"
                Margin="0"
                Padding="10"
                HorizontalAlignment="Stretch"
                BorderThickness="2"
                Content="Login"
                FontSize="16"
                ToolTip="비번맞음 로그인 되것지" />

            <VSControls:VsButton
                Grid.Row="3"
                Height="45"
                Margin="0"
                Padding="10"
                HorizontalAlignment="Stretch"
                BorderThickness="2"
                Command="{Binding LoginCommand}"
                Content="Login"
                FontSize="16" />

        </Grid>

    </Grid>
</UserControl>
